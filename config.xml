<?xml version='1.0' encoding='utf-8'?>
<widget id="com.horizon.htis" version="0.9.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>加油</name>
    <description>
        加油机信息系统
    </description>
    <author email="sales@mthorizon.com" href="www.mthorizon.com">
        上海好耐电子科技有限公司
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        
        <icon src="res/android/mdpi.png" density="" />
        <icon src="res/android/ldpi.png" density="ldpi" />
        <icon src="res/android/mdpi.png" density="mdpi" />
        <icon src="res/android/hdpi.png" density="hdpi" />
        <icon src="res/android/xhdpi.png" density="xhdpi" />

        <!-- you can use any density that exists in the Android project-->
        <splash src="res/screen/android/screen.9.png" density="land-hdpi"/>
        <splash src="res/screen/android/screen.9.png" density="land-ldpi"/>
        <splash src="res/screen/android/screen.9.png" density="land-mdpi"/>
        <splash src="res/screen/android/screen.9.png" density="land-xhdpi"/>

        <splash src="res/screen/android/screen.9.png" density="port-hdpi"/>
        <splash src="res/screen/android/screen.9.png" density="port-ldpi"/>
        <splash src="res/screen/android/screen.9.png" density="port-mdpi"/>
        <splash src="res/screen/android/screen.9.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <!-- 初始化状态栏黑色 -->
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#eeeeee" />
    <!-- 屏幕图片 -->
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="SplashMaintainAspectRatio" value="false" />
    <!-- 屏幕背景 -->
    <preference name="BackgroundColor" value="0xffeeeeee"/>
</widget>
